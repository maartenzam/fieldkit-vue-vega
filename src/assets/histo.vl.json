{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Vega-Lite spec for FieldKit line charts.",
  "config": {
    "axis": {
      "labelFont": "Avenir Light",
      "labelFontSize": 12,
      "labelColor": "#6a6d71",
      "titleFont": "Avenir Light",
      "titleFontSize": 14,
      "titlePadding": 20,
      "grid": false,
      "tickSize": 10,
      "tickOpacity": 0,
      "domainColor": "#d8dce0"
    },
    "axisX": {
      "title": null
    },
    "axisY": {
      "domain": false
    },
    "view": {
      "stroke": "transparent"
    }
  },
  "width": "container",
  "encoding": {
    "x": {
      "bin": { "maxbins": 20 },
      "field": "value",
      "axis": {},
      "title": "Battery charge (%)"
    },
    "y": { "aggregate": "count" },
    "color": {
      "bin": { "maxbins": 20 },
      "field": "value",
      "scale": { "scheme": "inferno", "reverse": false },
      "legend": null
    },
    "tooltip": [
      { "aggregate": "count" },
      { "field": "value", "bin": { "maxbins": 20 }, "title": "Range" }
    ]
  },
  "layer": [
    {
      "layer": [
        {
          "mark": {
            "type": "bar",
            "strokeWidth": 2
          }
        }
      ]
    }
  ]
}
