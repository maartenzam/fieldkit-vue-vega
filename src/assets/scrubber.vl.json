{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Vega-Lite spec for FieldKit scrubber.",
  "config": {
    "axis": {
      "labelFont": "Avenir Light",
      "labelFontSize": 12,
      "labelColor": "#6a6d71",
      "titleFont": "Avenir Light",
      "titleFontSize": 14,
      "titlePadding": 20,
      "grid": false,
      "tickSize": 10,
      "tickOpacity": 0,
      "domainColor": "#d8dce0"
    },
    "axisX": {
      "title": null
    },
    "axisY": {
      "domain": false
    },
    "view": {
      "stroke": "transparent"
    }
  },
  "width": "container",
  "height": 50,
  "encoding": {
    "x": {
      "field": "time",
      "type": "temporal",
      "axis": {
        "formatType": "time",
        "format": "%Y-%m-%d"
      }
    },
    "y": { "field": "value", "type": "quantitative" }
  },
  "layer": [
    {
      "params": [
        {
          "name": "brush",
          "select": { "type": "interval", "encodings": ["x"] }
        }
      ],
      "mark": { "type": "area", "color": "#DCDEDF" }
    },
    {
      "transform": [{ "filter": { "param": "brush" } }],
      "mark": { "type": "area", "color": "#52b5e4" }
    },
    {
      "mark": { "type": "image", "width": 30, "height": 30 },
      "encoding": {
        "x": { "field": "time", "type": "temporal" },
        "y": { "field": "value", "type": "quantitative" },
        "url": { "field": "img", "type": "nominal" }
      }
    }
  ],
  "resolve": { "axis": { "x": "shared", "y": "shared" } }
}
