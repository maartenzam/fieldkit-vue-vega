{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic line chart example.",
  "width": 500,
  "height": 200,
  "padding": 5,

  "signals": [
  ],

  "data": [
    {
      "name": "table1",
      "values": [
        {"x": 0, "y": 28, "c":0},
        {"x": 1, "y": 43, "c":0},
        {"x": 2, "y": 81, "c":0},
        {"x": 3, "y": 19, "c":0},
        {"x": 4, "y": 52, "c":0},
        {"x": 5, "y": 24, "c":0},
        {"x": 6, "y": 87, "c":0},
        {"x": 7, "y": 17, "c":0},
        {"x": 8, "y": 68, "c":0},
        {"x": 9, "y": 49, "c":0}
      ]
    },
    {
        "name": "table2",
        "values": [
          {"x": 0, "y": 20, "c":1},
          {"x": 1, "y": 35, "c":1},
          {"x": 2, "y": 10, "c":1},
          {"x": 3, "y": 15, "c":1},
          {"x": 4, "y": 48, "c":1},
          {"x": 5, "y": 28, "c":1},
          {"x": 6, "y": 66, "c":1},
          {"x": 7, "y": 27, "c":1},
          {"x": 8, "y": 16, "c":1},
          {"x": 9, "y": 25, "c":1}
        ]
      }
  ],

  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {"data": "table1", "field": "time"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "table1", "field": "value"}
    },
    {
        "name": "x2",
        "type": "time",
        "range": "width",
        "domain": {"data": "table2", "field": "time"}
      },
      {
        "name": "y2",
        "type": "linear",
        "range": "height",
        "nice": true,
        "zero": true,
        "domain": {"data": "table2", "field": "value"}
      }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x"},
    {"orient": "left", "scale": "y"},
    {"orient": "right", "scale": "y2"}
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table1",
          "groupby": "name"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "x", "field": "time"},
              "y": {"scale": "y", "field": "value"},
              "stroke": {"value": null},
              "strokeWidth": {"value": 2}
            },
            "update": {
              "strokeOpacity": {"value": 0.5}
            },
            "hover": {
              "strokeOpacity": {"value": 1}
            }
          }
        }
      ]
    },
    {
        "type": "group",
        "from": {
          "facet": {
            "name": "series2",
            "data": "table2",
            "groupby": "name"
          }
        },
        "marks": [
          {
            "type": "line",
            "from": {"data": "series2"},
            "encode": {
              "enter": {
                "x": {"scale": "x2", "field": "time"},
                "y": {"scale": "y2", "field": "value"},
                "stroke": {"value": null},
                "strokeWidth": {"value": 2}
              },
              "update": {
                "strokeOpacity": {"value": 0.5}
              },
              "hover": {
                "strokeOpacity": {"value": 1}
              }
            }
          }
        ]
      }
  ]
}